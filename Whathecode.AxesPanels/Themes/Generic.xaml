<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:Whathecode.AxesPanels.Controls"
	xmlns:axesPanels="clr-namespace:Whathecode.AxesPanels">
	
	<Style TargetType="{x:Type controls:TimeLine}">
		
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:TimeLine}">
					<Border
						Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}"
						Padding="{TemplateBinding Padding}">

						<ItemsPresenter />

					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		
		<Setter Property="ItemsPanel">
			<Setter.Value>
				<ItemsPanelTemplate>
					<axesPanels:TimePanel
						VisibleIntervalX="{Binding VisibleInterval, RelativeSource={RelativeSource AncestorType=controls:TimeLine}}" />
				</ItemsPanelTemplate>
			</Setter.Value>
		</Setter>
		
		<Setter Property="ItemContainerStyle">
			<Setter.Value>
				<Style TargetType="controls:TimeLineItem">
					<Setter
						Property="axesPanels:TimePanel.X"
						Value="{Binding (controls:TimeLine.Occurance)}" />
				</Style>
			</Setter.Value>
		</Setter>
		
	</Style>

</ResourceDictionary>